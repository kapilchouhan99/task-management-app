<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h1 class="card-title"><%= @task.title %></h1>
    </div>
    <div class="card-body">
      <p class="card-text"><strong>Description:</strong> <%= @task.description %></p>
      <p class="card-text"><strong>Status:</strong>
        <div class="dropdown">
          <button class="btn btn-info dropdown-toggle" type="button" id="statusDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= @task.status.humanize %>
          </button>
          <div class="dropdown-menu" aria-labelledby="statusDropdown">
            <% Task.statuses.keys.each do |status| %>
              <a class="dropdown-item" href="#" data-status="<%= status %>" data-id="<%= @task.id %>"><%= status.humanize %></a>
            <% end %>
          </div>
        </div>
      </p>
      <p class="card-text"><strong>Deadline:</strong> <%= @task.deadline.strftime('%d-%m-%y') %></p>
    </div>
    <div class="card-footer">
      <%= link_to "Edit", edit_task_path(@task), class: "btn btn-warning mr-2" %>
      <%= link_to "Destroy", task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger mr-2" %>
      <%= link_to "Back to Task List", tasks_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<script>
  changeStatus()
</script>