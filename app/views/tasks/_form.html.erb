<div class="form-container">
  <%= form_with model: task, local: true do |form| %>
    <div class="form-group">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group" style=width: 50%;>
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <% if params[:action] == 'new' %>
      <div class="form-group">
        <%= form.label :status, class: 'form-label' %>
        <%= form.text_field :status, placeholder: 'Backlog', value: 'Backlog', class: 'form-control', disabled: true %>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :deadline, class: 'form-label' %>
      <%= form.date_field :deadline, class: 'form-control' %>
    </div>

    <div class="form-group mt-3">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
  <%= link_to "Back to Task List", tasks_path, class: "btn btn-secondary" %>
</div>
